set(CMAKE_SYSTEM_NAME Darwin)

# replace with your path to OSXCross toolchain
set(CLANG_WRAPPED_COMPILER_PATH /home/ubuntu/wrapped/)
set(OSXCROSS_PATH /home/ubuntu/build/osxcross/target)
set(OSXCROSS_SDK_VERSION 10.11)

set(CMAKE_C_COMPILER ${CLANG_WRAPPED_COMPILER_PATH}/x86_64-apple-darwin15-clang)
set(CMAKE_CXX_COMPILER ${CLANG_WRAPPED_COMPILER_PATH}/x86_64-apple-darwin15-clang++)

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)

set(CMAKE_PREFIX_PATH ${OSXCROSS_PATH}/SDK/MacOSX${OSXCROSS_SDK_VERSION}.sdk/usr)
